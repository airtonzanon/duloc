[alias]
    d = diff
    ds = diff --stat
    dw = diff --color-words
    l = log
    lo = log --oneline
    lp = log --patch
    lpw = log --patch --color-words
    last = log --stat --max-count 1
    ls = log --stat
    rci = !git commit -m \"$(curl -s http://whatthecommit.com/index.txt)\"
    st = status
[user]
    name = Henrique Moody
    email = henriquemoody@gmail.com
[color]
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    frag = magenta bold
    meta = yellow bold
    new = green bold
    old = red bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[core]
    editor = vim
    excludesfile = ~/.gitignore
[push]
    default = current
[rebase]
    autosquash = true
[gc]
    auto = 0
